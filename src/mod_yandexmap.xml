<extension type="module" version="3.0" client="site" method="upgrade">
	<name>YaMap Yandex Map</name>
	<author>Iljin Oleg Olegovich</author>
	<creationDate>March 2015</creationDate>
	<copyright>Copyright (c) 2015 YaMap. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>iljin.oleg.olegovich@gmail.com</authorEmail>
	<authorUrl>http://itb-company.com/</authorUrl>
	<version>1.0.0</version>
	<description>
	<![CDATA[
	Модуль для отображения яндекс карт через js-скрипт
	]]>
	</description>

	<files>
		<filename module="mod_yandexmap">mod_yandexmap.php</filename>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<folder>tmpl</folder>
	</files>

	<languages>
		<language tag="en-GB">en-GB.mod_yandexmap.ini</language>
		<language tag="en-GB">en-GB.mod_yandexmap.sys.ini</language>
		<language tag="ru-RU">ru-RU.mod_yandexmap.ini</language>
		<language tag="ru-RU">ru-RU.mod_yandexmap.sys.ini</language>
	</languages>

	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="modjsmap"
					type="textarea" rows="6"
					label="MOD_YANDEXMAP_JS_LABEL"
					description="MOD_YANDEXMAP_JS_DESCRIPTION"
				/>
			</fieldset>

			<fieldset name="advanced">
				
				<field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					description="JFIELD_ALT_MODULE_LAYOUT_DESC"
				/>

				<field
					name="moduleclass_sfx"
					type="text"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC"
				/>

				<field
					name="cache"
					type="list"
					default="1"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					description="COM_MODULES_FIELD_CACHING_DESC"
				>
					<option value="1">JGLOBAL_USE_GLOBAL</option>
					<option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>

				<field
					name="cache_time"
					type="text"
					default="900"
					label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
					description="COM_MODULES_FIELD_CACHE_TIME_DESC"
				/>

				<field
					name="cachemode"
					type="hidden"
					default="static"
				>
					<option value="static"></option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>